include includes/celchin-header.pug
block content
    link(rel="stylesheet" , href="/stylesheets/pagination.css")
    link(rel='stylesheet' , href='/stylesheets/celchin.css')
    body 
        include includes/celchin-navbar.pug
        main(id="main" class="recommended ")
            div(class="container-fluid mt-4 mb-5")
                .d-flex.justify-content-between
                    div
                        h4.text-bold.ml-3 All #[span.orange-text Products #[i(class="fa fa-angle-right")]]
                    div.page-box.text-center
                        if totalProducts.length > displaySize
                            - let pagePoint =  currentPage + 1
                            - let pageUrl = "/shop?page=" + pagePoint
                            .container
                                .row
                                    if currentPage > 1 
                                        - let backPoint = currentPage - 1
                                        - let backUrl = "/shop?page=" + backPoint
                                        a(class="first" href=backUrl)
                                            span Prev
                                    span.pageNm #{pagePoint - 1}
                                    if currentPage != pages
                                        a(class=" second" href=pageUrl)
                                            span Next
                            p.small Showing Page #{pagePoint - 1} of #{pages}
                div(class="category-page")
                    div(class="")
                        h4 #[strong #{name}]
                        div(class=" mt-3") 
                            if products.length > 0
                                div(id="itemContainer" class="row row-mobile")
                                    each product , i in products 
                                        .col-lg-4.col-md-6
                                            .box
                                                .row
                                                    .col-xl-4.col-lg-12
                                                        .img-center
                                                            img(src=`/products/${product.profile}` class="" alt="Product")
                                                    .col-xl-7.col-lg-12
                                                        div.prod-box
                                                            p.prod-head.mb-0 #{product.name}
                                                            p.prod-para-box.mb-0 #[i(class="fa fa-quote-left")]
                                                                p.prod-para #{product.description}
                                                            //p.review #[i(class="fa fa-star")] #[i(class="fa fa-star")] #[i(class="fa fa-star")] #[span 7 reviews]
                                                        p.link-para
                                                            a(data-name=`${product.name}` data-code=`${product._id}` href="#" class="btn btn-primary  mr-2 cart-item link2") Add to Cart
                                                            a(href='/shop/product/' + product.productCode class="btn btn-primary link") View
                                        
                                            //- .card.card_shadow.mt-3
                                            //-     .text-center
                                            //-         img(src=`/products/${product.profile}` alt="product image" width="50%")
                                            //-     p.category_header.pl-2 #{product.name}
                                            //-     p.category_txt.pl-2 #{product.description}
                                            //-     a(data-name=`${product.name}` data-code=`${product._id}` href="#" class="btn add_to_cart cart-item") #[i(class="fa fa-shopping-cart")] Cart
                                            //-     a(href="#" class="btn category-btn") View
        script(src="/js/cart.js" type="module")                   
        include includes/footerDesign.pug   

        include includes/cel-footer.pug