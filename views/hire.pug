include includes/celchin-header.pug
block content 
  link(rel="stylesheet" , href="/stylesheets/pagination.css")
  link(rel='stylesheet' , href='/stylesheets/celchin.css')
  body#hire-page
    include includes/celchin-navbar.pug
    div.container-fluid.bg-fain.after-fixed-elem
      div.row 
        div.col-md-2.bg-hire
          h5.pl-3 Hire Categories
          hr 
          ul.list-unstyled    
            li
              a(class="aside-link " href='/hire/') All
            each category , i in categories 
              li 
                a(class=`aside-link ${category.name}_active` href=`/hire/${category.name}`) #{category.name} 
        div.col-md-10.hire-boxx
          if products.length > 0 
            .justify-content-between.d-flex
              div
              div.page-box.text-center
                if totalProducts.length > displaySize
                  - let pagePoint =  currentPage + 1
                  - let pageUrl = "/hire?page=" + pagePoint
                  .container
                      if currentPage > 1 
                        - let backPoint = currentPage - 1
                        - let backUrl = "/hire?page=" + backPoint
                        a(class="first" href=backUrl)
                          span Prev
                      span.pageNm #{pagePoint - 1}
                      if currentPage != pages
                        a(class=" second" href=pageUrl)
                          span Next
                  p.small Showing Page #{pagePoint - 1} of #{pages}
            div.row 
              each product  , i in products 
                div.col-lg-4.mb-4.col-md-6.col-sm-6
                  div.hire-card.m-r-1 
                    img(src=`/products/${product.product.profile}` class="hire-card-img-top")
                    div.card-body 
                      strong #{product.product.name}
                      p Celchin Rental Solutions 
                      a(class="hire-card-footer" href=`/hire/${product.product.category}/${product.product.name}`) View Hire Options
          else
            h1.pt-5 Nothing to display.
          
    script(src="/js/cart.js" type="module")                   
    include includes/footerDesign.pug   

    include includes/cel-footer.pug  
