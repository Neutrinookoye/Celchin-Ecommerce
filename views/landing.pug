include includes/celchin-header.pug
block content
    link(rel='stylesheet' , href='/stylesheets/celchin.css')
    body
        include includes/celchin-nav.pug
        section(class="container-fluid intro") 
            div(class="row")
                div(class="col-md-12 mb-3 pr-0")
                    div(class="owl-carousel owl-theme owl-intro")
                        div(class="col-md-12 intro-col")
                            .d-flex.justify-content-between.intro-wrap
                                div.intro-body
                                    .intro-text
                                        h1 Power
                                        h1 Generating 
                                        h1 Sets
                                        p From your domestic (0.7kVA) to your industrial (50,000kVA) power
                                            | generating sets, you can hire/shop for all types of power generating
                                            | sets here, with pickup and delivery options available.
                                        div 
                                            a(href="#" class="btn") Shop 
                                img(class="intro-img"  src="/images/Diesel-generator.jpg")
                        div(class="col-md-12 intro-col")
                            .d-flex.justify-content-between.intro-wrap
                                div.intro-body
                                    .intro-text
                                        h1 Power
                                        h1 Generating 
                                        h1 Sets
                                        p From your domestic (0.7kVA) to your industrial (50,000kVA) power
                                            | generating sets, you can hire/shop for all types of power generating
                                            | sets here, with pickup and delivery options available.
                                        div 
                                            a(href="#" class="btn") Shop 
                                img(class="intro-img"  src="/images/Diesel-generator.jpg")

                        div(class="col-md-12 intro-col")
                            .d-flex.justify-content-between.intro-wrap
                                div.intro-body
                                    .intro-text
                                        h1 Power
                                        h1 Generating 
                                        h1 Sets
                                        p From your domestic (0.7kVA) to your industrial (50,000kVA) power
                                            | generating sets, you can hire/shop for all types of power generating
                                            | sets here, with pickup and delivery options available.
                                        div 
                                            a(href="#" class="btn") Shop 
                                img(class="intro-img"  src="/images/banners/generator-diesel-20kva-3000kva.jpg")
                        div(class="col-md-12 intro-col")
                            .d-flex.justify-content-between.intro-wrap
                                div.intro-body
                                    .intro-text
                                        h1 Power
                                        h1 Generating 
                                        h1 Sets
                                        p From your domestic (0.7kVA) to your industrial (50,000kVA) power
                                            | generating sets, you can hire/shop for all types of power generating
                                            | sets here, with pickup and delivery options available.
                                        div 
                                            a(href="#" class="btn") Shop 
                                img(class="intro-img"  src="/images/Diesel-generator.jpg")

        //- What are you here to do section
        section(class="what-are")
            .container-fluid 
                .row    
                    .col-md-12 
                        .section-header.text-center
                            h3 What are you here to do?
                .row.row-mobile
                    .col-md-4.what-are-box
                        div.what-are-div
                            img(src="/images/banners/generator-diesel-20kva-3000kva.jpg" alt="An image")
                            p 
                                a(href="#") HIRE EQUIPMENT 
                    .col-md-4.what-are-box
                        div.what-are-div
                            img(src="/images/banners/generator-diesel-20kva-3000kva.jpg" alt="An image")
                            p 
                                a(href="#") BUY EQUIPMENT 
                    .col-md-4.what-are-box
                        div.what-are-div
                            img(src="/images/banners/generator-diesel-20kva-3000kva.jpg" alt="An image")
                            p 
                                a(href="#") RENT MY EQUIPMENT 


        //- Recommended for you section
        section(class="recommended")
            div(class="container-fluid") 
                .row 
                    .col-md-12
                        .section-header.mb-0.pb-0
                            div(class="d-flex justify-content-between px-3 mb-0 pb-0")
                                h3 Recommended for you
                                a(href="/shop" id="seeall" class="text-bold d-md-block d-none") See All Products #[i(class="fa fa-angle-right")]
                    .col-md-12
                        div(class="card-body")
                            .row.row-mobile
                                if shops.length > 0 
                                    each product , index in shops 
                                        if index <= 7 
                                            .col-lg-3.col-md-6
                                                .box
                                                    div
                                                        img(src=`/products/${product.product.profile}` class="" alt="Product")
                                                    div.prod-box
                                                        p.prod-head #{product.product.name}
                                                        p.prod-sub Mikano Interational
                                                        p #[sup.text-bold.mr--1 &#8358;] #[span.text-bold.currPrice.mr-3 88,000]
                                                            span #[sup.mr--1.text-mute.pt-1 &#8358;] #[span.strike-text.text-mute 100,000]
                                                        a(href="#") #[i(class="fa fa-share-alt share")] 
                                                    p.link-para
                                                        a(href="#" class="heart") #[i(class="fa fa-heart-o")] 
                                                        a(data-name=`${product.product.name}` data-code=`${product.product._id}` href="#" class="btn btn-cart cart-item link2") #[span #[i(class="fa fa-shopping-basket mr-2")]] Add to Cart
                                else 
                                    p.ml-2  No recommended items to display yet.
                    .col-md-12
                        .section-header.mb-0.pb-0.mt-0.pt-0
                            div(class="d-flex justify-content-end px-3 mb-0 pb-0")
                                a(href="/shop" id="seeall" class="text-bold d-md-none d-block") See All Products #[i(class="fa fa-angle-right")]

        .grey-box
                                                
        section(class="popular-cat")
            div(class="container-fluid")
                div(class="row")
                    .col-md-12
                        div(class="section-header px-3 mb-0 pb-3")
                            h3 Popular Categories
                    div(class="col-md-12")
                        .row.row-mobile
                            .col-lg-3.col-md-6 
                                a(href='/shop/Generators') 
                                    div.popular-box
                                        img(src='/images/Generator-Orange.jpg' class="ggf") 
                                        div 
                                            a(href='/shop/Generators' class="pop-link") Generators
                            .col-lg-3.col-md-6 
                                a(href='/shop/Solar') 
                                    div.popular-box
                                        img(src='/images/Tower-Crane.jpg' class="ggf")  
                                        div
                                            a(href='/shop/Solar' class="pop-link") Solar Systems
                            .col-lg-3.col-md-6 
                                a(href='/shop/Spare Parts') 
                                    div.popular-box
                                        img(src='/images/knitting-machine-parts.jpg' class="ggf")  
                                        div
                                            a(href='/shop/Spare Parts' class="pop-link") Spare parts
                            .col-lg-3.col-md-6 
                                a(href='/shop/Electronics') 
                                    div.popular-box
                                        img(src='/images/machine-tools-accessories-1336645.jpg' class="ggf")  
                                        div
                                            a(href='/shop/Generators' class="pop-link") Accessories
                            //- if  categories.length > 0 
                            //-     each category , i in  categories 
                            //-         div(class="col-md-3 col-sm-6")
                            //-             a(href=`/shop/${category.name}`) 
                            //-                 div.hire-card.text-center 
                            //-                     img(src=`${category.profile}` class="ggf")  
                            //-                     div.card-body.mt-0.mb-0
                            //-                         p.mt-0.mb-0.text-bold #{category.name }
                            //-                     a(href=`/shop/${category.name}` class="hire-card-footer") #[i(class="fa fa-shopping-cart")] View
                            //- else 
                            //-    p Sorry , there is currently no product category

        .grey-box 

        section(class="recommended")
            div(class="container-fluid")
                div(class="row")
                    .col-md-12 
                        .section-header.mb-0.pb-0
                            div(class=" d-flex justify-content-between px-3 mb-0 pb-3")
                                h3 Latest Products
                                a.text-bold(href="/shop" class="d-none d-md-block") See All Products #[i(class="fa fa-angle-right")]
                    div(class="col-md-12")
                        .row.row-mobile
                            if shops.length > 0
                                each product , i in shops 
                                    if i !== 5  &&  i <= 7
                                        div.col-lg-3.col-md-6 
                                            
                                                div.box
                                                    img(src=`/products/${product.product.profile}` alt=` Image of ${product.product.name}` title="Celchin Products")
                                                    div.prod-box
                                                        p.prod-head #{product.product.name}
                                                        //- p.prod-sub Mikano International
                                                        if product.product.description 
                                                            p.prod-sub #{product.product.description.substr(0 , 30)}.... 
                                                                | #[a(href=`/shop/product/${product.product.productCode}` class="orange-text text-bold") view]
                                                        else 
                                                            p.prod-sub Affordable , and assured to last for a long time 
                                                        //- span.new New #[i(class="fa fa-star")]
                                                        p #[sup.text-bold.mr--1 &#8358;] #[span.text-bold.currPrice.mr-3 88,000]
                                                            span #[sup.mr--1.text-mute.pt-1 &#8358;] #[span.strike-text.text-mute 100,000]
                                                        a(href="#") #[i(class="fa fa-share-alt share")] 
                                                    p.link-para
                                                        a(href="#" class="heart") #[i(class="fa fa-heart-o")] 
                                                        a(data-name=`${product.product.name}` data-code=`${product.product._id}` href="#" class="btn btn-cart cart-item link2") #[span #[i(class="fa fa-shopping-basket mr-2")]] Add to Cart
                            else 
                                p No product currently in shop for sale
                        .col-md-12
                            .section-header.mb-0.pb-0.mt-0.pt-0
                                div(class="d-flex justify-content-end px-3 mb-0 pb-0")
                                    a(href="/shop" class="text-bold d-md-none d-block") See All Products  #[i(class="fa fa-angle-right")]

        .grey-box
                            
        section(class="recommended")
            div(class="container-fluid")
                .row 
                    .col-md-12
                        .section-header.mb-0.pb-0
                            div(class="d-flex justify-content-between px-3 mb-0 pb-0")
                                h3 Equipment Hire
                                a(href="/hire" class="text-bold d-md-block d-none") See All PRODUCTS  #[i(class="fa fa-angle-right")]
                    .col-md-12
                        div(class="card-body")
                            div(class="row row-mobile")
                                if hires.length > 0 
                                    each hire , i in hires 
                                        if i <= 3
                                            .col-lg-3.mb-3.col-md-6
                                                .box
                                                    div
                                                        img(src=`/products/${hire.product.profile}`  alt=`${hire.product.name} profile` title="Celchin Rental Solutions" class="hire-card-img-top")  
                                                    div.prod-box
                                                        p.prod-head #{hire.product.name}
                                                        p.prod-sub Mikano International
                                                        p #[sup.text-bold.mr--1 &#8358;] #[span.text-bold.currPrice 88,000]/day
                                                        a(href="#") #[i(class="fa fa-share-alt share")] 
                                                    .pl-3.pr-3.mb-2
                                                        a(class="btn btn-hire" href=`/hire/${categories.find(category => String(category._id) == String(hire.product.category)).name}/${hire.product.name}`) Hire Now
                                else 
                                    h2 No equipment is available for lease 
                    .col-md-12
                        .section-header.mb-0.pb-0.mt-0.pt-0
                            div(class="d-flex justify-content-end px-3 mb-0 pb-0")
                                a(href="/hire" class="text-bold d-md-none d-block") See All Products  #[i(class="fa fa-angle-right")]

        .grey-box

        section.got
            .container 
                div 
                    h3 GOT EQUIPMENT TO RENT?
                    P We can help you with putting your equipment out for rent. It's simple. Just 
                        | upload the image(s) of the equipment, enter the necessary details, and your customers 
                        | would be one-click away from contacting you.
                    div 
                        a(href="#" class="btn btn-add") ADD EQUIPMENT 

        section.get-on
            .container 
                div     
                    h3 GET ON OUR GIST LIST
                    P Want to stay abreast of our products, promos, sales and latest items in our 
                        | inventory? Oya, drop your email address.
                    .row.d-flex.justify-content-center
                        .col-md-8
                            form(action="" method="POST") 
                                .input-group 
                                    input(type="email" placeholder="name@email.com" class="form-control get-on-form")
                                    .input-group-append 
                                            span #[button Enlist]
                            
        script(src="/js/cart.js" type="module")
        script(src="/javascripts/library/search.js" type="module")
        include includes/footerDesign.pug
        include includes/cel-footer.pug 
        script(src="/js/index.js" type="module")
