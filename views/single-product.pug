include includes/bigjara-head.pug 
link(rel="stylesheet" href="/css/blog.css")
block content 
body.bg-fainted  
  section(class="d-wrapper")
    include includes/sidebar.pug 
    main.main(style="width:100%")
      include includes/admin-nav.pug 
      div.wrapper  
        div.wrap.justify-content-between  
          div.wrap-md-6
            h2.text-center.m-b-1.uppercase #{product.name} 
            div.w-100.m-b-1 
              figure 
                img(class="w-100" src=`/products/${product.profile}` alt=`${product.name} Logo`) 
            p 
              strong Quantity 
              span #{product.quantity}
            p 
              strong  Amount : 
              span &#8358;#{product.amount.toLocaleString()} 
            p 
              strong Warranty : 
              span #{product.warranty} 
            - let specifications = product.specification.split(" , ") 
            strong Specifications 
            ul 
              each spec in specifications 
                li #{spec}
            h3.uppercase Description 
            //div #{category.description} 
            div(data-identifier=`${product._id}` id="postContent" class="m-b-1")
              
  script(src="/js/easyframer.js")
  script(src="/js/grabProduct.js" type="module")